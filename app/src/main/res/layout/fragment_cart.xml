<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kunal.barcodetry1.CartActivityFragment">

    <TextView android:id="@+id/cart_display" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cart_value_text"
        android:id="@+id/cart_value"
        android:layout_above="@+id/cont"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|top"
        android:id="@+id/listv_cart_item"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="167dp">

    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/cont"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cart_display"
        android:layout_toEndOf="@+id/cart_display"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="That&apos;s it !"
        android:id="@+id/checkout"
        android:layout_alignTop="@+id/cont"
        android:layout_alignRight="@+id/listv_cart_item"
        android:layout_alignEnd="@+id/listv_cart_item"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp" />



</RelativeLayout>
